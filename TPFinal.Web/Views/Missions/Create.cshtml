@using TPFinal.Web.Models.Clients
@using TPFinal.Web.Models.Consultants
@using TPFinal.Web.Models.Missions

@model MissionViewModel

@{
    ViewData["Title"] = "Créer une Nouvelle Mission";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var clients = ViewBag.Clients as List<ClientViewModel>;
    var consultants = ViewBag.Consultants as List<ConsultantViewModel>;
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Titre" class="form-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateDebut" class="form-label"></label>
                <input asp-for="DateDebut" class="form-control" type="date" value="@Model.DateDebut.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateFin" class="form-label"></label>
                <input asp-for="DateFin" class="form-control" type="date" value="@Model.DateFin.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Budget" class="form-label"></label>
                <input asp-for="Budget" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Budget" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ClientId" class="form-label">Client</label>
                @if (clients != null && clients.Any())
                {
                    <select asp-for="ClientId" class="form-select">
                        @foreach (var client in clients)
                        {
                            <option value="@client.Id">@client.NomEntreprise</option>
                        }
                    </select>
                }
                else
                {
                    <p class="text-danger" role="alert">Aucun client disponible. Veuillez vérifier la connexion à l'API.</p>
                }
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConsultantId" class="form-label">Consultant</label>
                @if (consultants != null && consultants.Any())
                {
                    <select asp-for="ConsultantId" class="form-select">
                        <option value="">Aucun</option>
                        @foreach (var consultant in consultants)
                        {
                            <option value="@consultant.ConsultantId">@consultant.Nom @consultant.Prenom</option>
                        }
                    </select>
                }
                else
                {
                    <select asp-for="ConsultantId" class="form-select">
                        <option value="">Aucun</option>
                    </select>
                }
                <span asp-validation-for="ConsultantId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Créer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</form>