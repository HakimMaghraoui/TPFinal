@using TPFinal.Web.Models.Missions
@model IEnumerable<MissionViewModel>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Rechercher par titre" value="@ViewBag.Search" />
        <button type="submit" class="btn btn-primary">Rechercher</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Réinitialiser</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Créer une nouvelle mission</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Titre)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.DateDebut)</th>
            <th>@Html.DisplayNameFor(model => model.DateFin)</th>
            <th>@Html.DisplayNameFor(model => model.Budget)</th>
            <th>@Html.DisplayNameFor(model => model.ClientNomEntreprise)</th>
            <th>@Html.DisplayNameFor(model => model.ConsultantNomPrenom)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Titre)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.DateDebut, "{0:yyyy-MM-dd}")</td>
                <td>@Html.DisplayFor(modelItem => item.DateFin, "{0:yyyy-MM-dd}")</td>
                <td>@Html.DisplayFor(modelItem => item.Budget)</td>
                <td>@Html.DisplayFor(modelItem => item.ClientNomEntreprise)</td>
                <td>@Html.DisplayFor(modelItem => item.ConsultantNomPrenom)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>