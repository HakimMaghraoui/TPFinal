@using TPFinal.Web.Models.Missions
@model MissionViewModel

@{
    ViewData["Title"] = $"Supprimer Mission : {Model.Titre}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette mission ?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Titre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Titre)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DateDebut)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateDebut, "{0:yyyy-MM-dd}")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DateFin)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DateFin, "{0:yyyy-MM-dd}")</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Budget)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Budget)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ClientNomEntreprise)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ClientNomEntreprise)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ConsultantNomPrenom)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ConsultantNomPrenom)</dd>
    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Supprimer</button>
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>