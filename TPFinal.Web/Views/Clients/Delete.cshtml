@model TPFinal.Web.Models.Clients.ClientViewModel

<div class="alert alert-warning" role="alert">
    Êtes-vous sûr de vouloir supprimer le client @Model.NomEntreprise ? Cette action est irréversible.
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomEntreprise)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomEntreprise)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SecteurActivite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SecteurActivite)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </form>
</div>
