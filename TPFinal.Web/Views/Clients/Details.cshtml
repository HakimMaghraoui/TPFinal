@model TPFinal.Web.Models.Clients.ClientViewModel

<h1>Détail du client</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomEntreprise)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomEntreprise)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecteurActivite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SecteurActivite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <h4>Missions</h4>
    <hr />
    @if (Model.Missions != null && Model.Missions.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date Début</th>
                    <th>Date Fin</th>
                    <th>Budget</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mission in Model.Missions)
                {
                    <tr>
                        <td>@mission.Titre</td>
                        <td>@mission.Description</td>
                        <td>@mission.DateDebut.ToString("yyyy-MM-dd")</td>
                        <td>@mission.DateFin.ToString("yyyy-MM-dd")</td>
                        <td>@mission.Budget</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Aucune mission associée à ce client.</p>
    }
</div>
<div>
    <div class="mt-4 d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>